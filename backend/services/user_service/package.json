{
  "name": "user-service",
  "version": "1.0.0",
  "description": "User service for Germy Attendance Platform",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:api": "jest --testPathPattern=api",
    "test:comprehensive": "jest --testPathPattern=comprehensive",
    "test:user": "jest --testPathPattern=comprehensive-user",
    "test:platform": "jest --testPathPattern=comprehensive-platform",
    "test:middleware": "jest --testPathPattern=comprehensive-middleware",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "DEBUG=* jest --runInBand",
    "test:all": "jest --testPathPattern=comprehensive --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.29.0",
    "postgres": "^3.4.3",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "axios": "^1.6.2",
    "ioredis": "^5.3.2",
    "bull": "^4.12.2",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "drizzle-kit": "^0.20.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "@types/node": "^20.10.5",
    "@types/multer": "^1.4.11",
    "@types/axios": "^0.14.0",
    "@types/ioredis": "^5.0.0",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  },
  "keywords": ["attendance", "saas", "microservice", "user"],
  "author": "Germy Team",
  "license": "MIT"
}
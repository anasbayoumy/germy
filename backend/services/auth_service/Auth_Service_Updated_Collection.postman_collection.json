    {
      "name": "üß™ Automated Test Suite",
      "item": [
        {
          "name": "Run Complete Workflow",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "health"]

# Service Configuration
NODE_ENV=development
PORT=3003
SERVICE_NAME=attendance-service

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/attendance_db

# Authentication
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRES_IN=24h

# AI Integration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-pro
FACE_COMPARISON_THRESHOLD=70
LIVENESS_THRESHOLD=80

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=attendance-photos
AWS_REGION=us-east-1

# Geofence Settings
DEFAULT_GEOFENCE_RADIUS=350
GEOFENCE_BUFFER_ZONE=50
LOCATION_ACCURACY_THRESHOLD=10

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# Redis (for caching and real-time features)
REDIS_URL=redis://localhost:6379

# External Services
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
FILE_SERVICE_URL=http://localhost:3006

# Frontend
FRONTEND_URL=http://localhost:5173

# Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_PATH=./uploads

# AI Processing
AI_PROCESSING_TIMEOUT=30000
MAX_CONCURRENT_AI_REQUESTS=10

# Fraud Detection
FRAUD_DETECTION_ENABLED=true
RISK_SCORE_THRESHOLD=70
AUTO_FLAG_THRESHOLD=85

# Performance
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
